<UserControl x:Class="AESGame.Views.Common.UsageStats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AESGame.Views.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Click="Click_VisitStatsOnline" Style="{StaticResource ButtonTextBlock}" Content="Xem thống kê của bạn">
        <Button.Resources>
            <Style TargetType="{x:Type TextBlock}" >
                <Setter Property="FontFamily" Value="{StaticResource Ubuntu-Bold}" />
                <Setter Property="Foreground" Value="{StaticResource PrimaryColorBrush}" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontStretch" Value="Normal" />
                <Setter Property="FontStyle" Value="Normal" />
                <Setter Property="LineHeight" Value="1.57" />
                <Style.Triggers>
                    <Trigger Property ="IsMouseOver" Value="True">
                        <Setter Property="TextDecorations">
                            <Setter.Value>
                                <TextDecorationCollection>
                                    <TextDecoration Location="Underline" PenOffset="4">
                                        <TextDecoration.Pen>
                                            <Pen Thickness="2" Brush="{StaticResource PrimaryColorBrush}"></Pen>
                                        </TextDecoration.Pen>
                                    </TextDecoration>
                                </TextDecorationCollection>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Button.Resources>
    </Button>
</UserControl>
